        );
      }
    }

    .message {
      background: svg-load(
        "envelope.svg",
        fill=rgba(255, 255, 255, 0.3),
        width=100%,
        height=100%
      );

      &:focus,
      &:hover {
        background: svg-load(
          "envelope.svg",
          fill=$links-color,
          width=100%,
          height=100%
        );
      }
    }
  }
}
